# pnpm configuration for monorepo

# Automatically install peer dependencies
auto-install-peers=true

# Hoist packages that need to be at the root (React Native/Expo compatibility)
# This helps with packages that don't fully support symlinked node_modules
shamefully-hoist=true

# Allow peer dependency mismatches (React Native ecosystem often has version conflicts)
strict-peer-dependencies=false

# Prefer workspace packages when resolving dependencies
prefer-workspace-packages=true
